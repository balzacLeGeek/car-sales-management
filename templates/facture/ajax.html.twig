{% if ventes is not empty %}
<div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-10">
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th data-property-name="voiture" class="association">DATE</th>
                        <th data-property-name="voiture" class="association">MARQUE</th>
                        <th data-property-name="quantite" class="integer">QUANTITE</a></th>
                        <th data-property-name="quantite" class="integer">PRIX UNITAIRE</a></th>
                        <th data-property-name="quantite" class="integer">MONTANT</a></th>
                    </tr>
                </thead>
                <tbody>
                    {% for vente in ventes %}
                    <tr data-id="{{vente.id}}">
                        <td data-label="Voiture" class=" association ">
                            {{vente.date|date("m/d/Y")}}
                        </td>
                        <td data-label="Voiture" class=" association ">
                            {{vente.voiture.voitureType}}
                        </td>
                        <td data-label="Voiture" class=" association ">
                            {{vente.quantite|number_format(0, '', ' ')}}
                        </td>
                        <td data-label="Voiture" class=" association ">
                            {{vente.voiture.prixUnitaire|number_format(0, '', ' ')}}
                        </td>
                        <td data-label="Voiture" class=" association ">
                            {{(vente.voiture.prixUnitaire * vente.quantite)|number_format(0, '', ' ')}}
                        </td>
                    </tr>
                    {% endfor %}
                    <tr>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td style="font-size: 20px; font-weight: bold">TOTAL</td>
                        <td style="font-size: 20px; font-weight: bold">
                            {% set somme = 0 %}
                            {% set sumPoidsChp = 0 %}
                            {% for vente in ventes %}
                            {% set somme = somme + (vente.voiture.prixUnitaire * vente.quantite) %}
                            {% endfor %}
                            {{somme|number_format(0, '', ' ')}} Ar
                        </td>
                    </tr>
                    <tr>
                        <td colspan="5" style="font-size: 18px; font-weight: bold">
                            Arrêtée à la somme de {{ montantLettre }}
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endif %}